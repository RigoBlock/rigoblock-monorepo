{
  "name": "@rigoblock/protocol",
  "version": "0.2.3",
  "main": "dist/contracts.js",
  "scripts": {
    "build": "npm run compile && rm -rf dist && webpack",
    "ganache": "npx ganache-cli -p 8545 -i 5777 -m \"${npm_package_config_mnemonic}\"",
    "compile": "node deploy/compiler.js",
    "lint": "eslint src --ext js,jsx --ignore-path .gitignore --fix",
    "test": "NODE_ENV=test jest --env=node",
    "test:watch": "NODE_ENV=test jest --watch --env=node",
    "prepublish": "npm run build"
  },
  "files": [
    "artifacts",
    "deploy",
    "dist"
  ],
  "config": {
    "mnemonic": "lemon scrub wasp bracket town boat property sadness layer taxi butter audit"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test/setupTests.js",
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).{js}"
    ],
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ],
    "clearMocks": true
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "@0xproject/deployer": "^0.4.3",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.1",
    "babel-preset-es2015": "^6.24.1",
    "bignumber.js": "^7.2.1",
    "chalk": "^2.3.2",
    "ganache-cli": "^6.1.0",
    "jest": "^23.1.0",
    "pino": "^4.16.0",
    "web3": "^1.0.0-beta.33",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15"
  }
}
