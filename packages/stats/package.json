{
  "name": "@rigoblock/stats",
  "version": "0.1.1",
  "description": "Rigoblock stats collector",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:debug": "node --inspect-brk -r ts-node/register src/index.ts",
    "build": "rm -rf dist/* && tsc --outDir './dist'",
    "test": "NODE_ENV=test node --trace-warnings node_modules/.bin/jest --env=node"
  },
  "dependencies": {
    "@rigoblock/api": "^0.2.5",
    "@rigoblock/protocol": "^0.3.0",
    "bull": "^3.4.7",
    "node-statsd": "^0.1.1",
    "pino": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.55",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-beta.55",
    "@types/bull": "^3.3.19",
    "@types/jest": "^23.3.1",
    "@types/pino": "^4.16.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "eslint-plugin-typescript": "^0.12.0",
    "ioredis": "^4.0.0",
    "jest": "^23.4.2",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^17.0.1",
    "web3": "1.0.0-beta.35"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
