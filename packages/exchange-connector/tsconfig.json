{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ],
  "compilerOptions": {
    "declarationDir": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "noImplicitReturns": true,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "typeRoots": ["node_modules/@types"]
  }
}
