{
  "name": "@rigoblock/exchange-connector",
  "description": "A JS utility to interacts with Exchanges API.",
  "version": "0.0.12",
  "main": "dist/index.js",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=6.4"
  },
  "scripts": {
    "build": "rm -rf dist/* && webpack",
    "build:watch": "rm -rf dist/* && webpack --watch",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "lint": "eslint src --ext js,ts --ignore-path .gitignore --fix"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.2.3",
    "@babel/preset-env": "^7.0.0-beta.55",
    "@types/jest": "^23.3.1",
    "@types/nock": "^9.3.0",
    "@types/promise": "^7.1.30",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.5",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "23.6.0",
    "nock": "^10.0.6",
    "ts-jest": "^23.1.4",
    "ts-loader": "^5.3.3",
    "typescript": "3.2.2",
    "typescript-eslint-parser": "^21.0.2",
    "webpack": "4.28.4"
  },
  "dependencies": {
    "bignumber.js": "^8.0.2",
    "node-fetch": "^2.2.0",
    "promise": "^8.0.1",
    "reconnecting-websocket": "^4.1.5",
    "whatwg-fetch": "2.0.4",
    "ws": "^6.1.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "testURL": "http://localhost/",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
