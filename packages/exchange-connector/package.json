{
  "name": "@rigoblock/exchange-connector",
  "description": "A JS utility to interacts with Exchanges API.",
  "version": "0.0.1",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=6.4"
  },
  "scripts": {
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "tsc": "rm -rf dist/* && tsc --outDir './dist'",
    "tsc:watch": "rm -rf dist; tsc -w --outDir './dist'",
    "lint": "eslint src --ext js,ts --ignore-path .gitignore --fix"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.55",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.55",
    "@babel/preset-env": "^7.0.0-beta.55",
    "@types/jest": "^23.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.4.2",
    "ts-jest": "^23.1.3",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^17.0.1",
    "web3": "^1.0.0-beta.35"
  },
  "dependencies": {
    "@types/promise": "^7.1.30",
    "node-fetch": "^2.2.0",
    "promise": "^8.0.1",
    "whatwg-fetch": "^2.0.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
