{
  "name": "@rigoblock/exchange-connector",
  "description": "A JS utility to interacts with Exchanges API.",
  "version": "0.0.2",
  "main": "dist/index.js",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=6.4"
  },
  "scripts": {
    "build": "rm -rf dist/* && webpack",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "lint": "eslint src --ext js,ts --ignore-path .gitignore --fix"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "0x.js": "^0.38.6",
    "@babel/core": "^7.0.0-beta.55",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.55",
    "@babel/preset-env": "^7.0.0-beta.55",
    "@types/jest": "^23.3.1",
    "@types/nock": "^9.3.0",
    "@types/promise": "^7.1.30",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0",
    "bignumber.js": "^7.2.1",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.5.0",
    "nock": "^9.6.1",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^18.0.0",
    "web3": "^1.0.0-beta.35",
    "webpack": "^4.16.5"
  },
  "dependencies": {
    "node-fetch": "^2.2.0",
    "promise": "^8.0.1",
    "whatwg-fetch": "^2.0.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
