{
  "name": "@rigoblock/contracts",
  "version": "0.3.10",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run compile && rm -rf dist && lerna run --scope=@rigoblock/dapp ganache:bootstrap && webpack",
    "ganache": "ganache-cli -p 8545 -i 5777 -m \"${npm_package_config_mnemonic}\"",
    "compile": "node deploy/compiler.js",
    "deploy": "node deploy/cli.js",
    "lint": "eslint test deploy . --ext js --ignore-path .gitignore --fix && npm run lint-contracts",
    "test": "NODE_ENV=test node --max_old_space_size=8192 --trace-warnings node_modules/.bin/jest --env=node --runInBand",
    "lint-contracts": "solhint src/**/**/**/*.sol"
  },
  "files": [
    "artifacts",
    "deploy",
    "dist",
    "constants"
  ],
  "config": {
    "mnemonic": "lemon scrub wasp bracket town boat property sadness layer taxi butter audit"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test/setupTests.js",
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).{js}"
    ],
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ],
    "clearMocks": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-syntax-dynamic-import"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": "commonjs"
            }
          ]
        ]
      }
    }
  },
  "dependencies": {
    "@babel/polyfill": "7.0.0-beta.54",
    "@rigoblock/deployer": "0.1.13",
    "chalk": "2.4.1",
    "inquirer": "6.2.1",
    "multispinner": "0.2.1",
    "path": "0.12.7",
    "pino": "4.17.3",
    "truffle-hdwallet-provider": "0.0.6",
    "web3": "1.0.0-beta.37"
  },
  "devDependencies": {
    "0x.js": "^6.0.3",
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "7.3.1",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "7.3.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.0.0",
    "babel-loader": "8.0.5",
    "bignumber.js": "7.2.1",
    "eslint": "5.6.0",
    "fs-extra": "7.0.0",
    "ganache-cli": "6.1.8",
    "jest": "23.4.1",
    "jest-extended": "0.11.0",
    "solhint": "1.2.1",
    "webpack": "4.16.3",
    "webpack-cli": "3.1.0"
  }
}
