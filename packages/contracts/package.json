{
  "name": "@rgbk/contracts",
  "version": "0.3.16",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run pre_build && rm -rf dist && lerna run --scope=@rgbk/dapp ganache:bootstrap && webpack",
    "pre_build": "run-s compile contracts:gen generate_contract_wrappers",
    "ganache": "ganache-cli -p 8545 -i 5777 -m \"${npm_package_config_mnemonic}\"",
    "compile": "sol-compiler",
    "contracts:gen": "contracts-gen generate",
    "contracts:copy": "contracts-gen copy",
    "generate_contract_wrappers": "abi-gen --debug --abis  ${npm_package_config_abis} --output ./generated-wrappers --backend ethers",
    "deploy": "node deploy/cli.js",
    "lint": "eslint test deploy . --ext js --ignore-path .gitignore --fix && npm run lint-contracts",
    "test": "NODE_ENV=test node --max_old_space_size=4096 --trace-warnings node_modules/.bin/jest --env=node --runInBand",
    "test:ci": "NODE_ENV=test node --max_old_space_size=4096 --trace-warnings node_modules/.bin/jest --env=node --runInBand",
    "lint-contracts": "solhint src/**/**/**/*.sol"
  },
  "files": [
    "artifacts",
    "deploy",
    "dist",
    "constants"
  ],
  "config": {
    "mnemonic": "lemon scrub wasp bracket town boat property sadness layer taxi butter audit",
    "abis:comment": "This list is auto-generated by contracts-gen. Don't edit manually.",
    "abis": "./generated-artifacts/@(ASelfCustody|ATotlePrimary|AWeth|AbiEncoder|Authority|Distribution|Drago|DragoEventful|DragoFactory|DragoRegistry|ERC20|Erc20Proxy|Exchange|ExchangesAuthority|Faucet|GrgVault|HGetDragoData|Inflation|Migrations|NavVerifier|Owned|OwnedUninitialized|ProofOfPerformance|RigoToken|SigVerifier|Staking|StakingProxy|TokenTransferProxy|TotlePrimary|UnlimitedAllowanceToken|Vault|VaultEventful|VaultFactory|WETH9|ZeroExExchangeHandler).json"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/test/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ],
    "clearMocks": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-syntax-dynamic-import"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": "commonjs"
            }
          ]
        ]
      }
    }
  },
  "dependencies": {
    "@rgbk/deployer": "^0.1.19",
    "chalk": "2.4.1",
    "core-js": "3.2.1",
    "inquirer": "6.2.1",
    "multispinner": "0.2.1",
    "path": "0.12.7",
    "pino": "5.13.2",
    "pino-pretty": "3.2.1",
    "truffle-hdwallet-provider": "0.0.6",
    "web3": "1.0.0-beta.37"
  },
  "devDependencies": {
    "0x.js": "^6.0.3",
    "@0x/abi-gen": "^5.3.0",
    "@0x/contract-wrappers": "^13.7.0",
    "@0x/contracts-gen": "^2.0.9",
    "@0x/sol-compiler": "^4.1.0",
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "7.5.5",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.5",
    "bignumber.js": "7.2.1",
    "eslint": "5.6.0",
    "fs-extra": "7.0.0",
    "ganache-cli": "6.1.8",
    "jest": "24.9.0",
    "jest-extended": "0.11.2",
    "regenerator-runtime": "0.13.3",
    "solhint": "1.2.1",
    "webpack": "4.16.3",
    "webpack-cli": "3.1.0"
  },
  "gitHead": "9b5b4afd5d4197f721fa322549b436b6501ab4f8"
}
