{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "jsx": "react",
    "sourceRoot": "./src",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "lib": [ "es2015", "dom" ]
  },
  "global": {
    "baseSubscriber": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}
