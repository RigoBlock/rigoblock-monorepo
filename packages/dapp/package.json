{
  "name": "@rigoblock/dapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "http-server dist",
    "ganache": "npx ganache-cli -p 8545 -i 5777 -m \"${npm_package_config_mnemonic}\"",
    "ganache:bootstrap": "ganache-bootstrap",
    "ganache:seed": "ganache-seed",
    "build": "rm -rf dist/* && node scripts/build.js",
    "dev": "node scripts/start.js",
    "test": "npm run test:unit && npm run test:feature",
    "test:unit": "CI=true node scripts/test.js --env=jsdom",
    "test:unit:watch": "node scripts/test.js --env=jsdom",
    "test:unit:debug": "node --inspect-brk scripts/test.js --env=jsdom",
    "test:feature": "codeceptjs run --steps",
    "test:feature:debug": "codeceptjs run --debug",
    "cov": "npm run test:unit -- --coverage",
    "lint": "eslint src --ext js,jsx --ignore-path .gitignore --fix"
  },
  "config": {
    "mnemonic": "lemon scrub wasp bracket town boat property sadness layer taxi butter audit"
  },
  "devDependencies": {
    "@rigoblock/ganache-bootstrap": "^0.1.1",
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.4",
    "babel-preset-react-app": "^3.1.1",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.2",
    "chalk": "1.1.3",
    "codeceptjs": "^1.1.7",
    "codeceptjs-puppeteer": "^1.1.0",
    "css-loader": "0.28.11",
    "deep-freeze": "^0.0.1",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.2.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint-loader": "1.9.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "1.1.11",
    "fs-extra": "3.0.1",
    "ganache-cli": "^6.1.0",
    "html-webpack-plugin": "3.0.7",
    "http-server": "^0.11.1",
    "jest": "20.0.4",
    "keymirror": "^0.1.1",
    "localforage": "^1.6.0",
    "node-sass": "^4.7.2",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.3.0",
    "postcss-loader": "2.1.3",
    "prettier": "^1.11.1",
    "promise": "8.0.1",
    "prop-types": "^15.6.1",
    "puppeteer": "^1.2.0",
    "raf": "3.4.0",
    "react": "^16.2.0",
    "react-dev-utils": "^5.0.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "reactotron-react-js": "^1.13.0",
    "reactotron-redux": "^1.13.0",
    "redux": "^3.7.2",
    "redux-persist": "^5.9.1",
    "sass-loader": "^6.0.7",
    "style-loader": "0.20.3",
    "sw-precache-webpack-plugin": "0.11.5",
    "url-loader": "0.6.2",
    "webpack": "4.1.1",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "3.1.1",
    "webpack-manifest-plugin": "2.0.0-rc.2",
    "whatwg-fetch": "2.0.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
