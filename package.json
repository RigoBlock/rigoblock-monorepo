{
  "name": "rigoblock-dappv2",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "npm run test:unit && npm run test:feature",
    "test:unit": "CI=true react-scripts test --env=jsdom",
    "test:unit:watch": "react-scripts test --env=jsdom",
    "test:unit:debug": "react-scripts --inspect-brk test --runInBand --env=jsdom",
    "test:feature": "./node_modules/.bin/codeceptjs run --steps",
    "test:feature:debug": "./node_modules/.bin/codeceptjs run --debug",
    "cov": "npm run test:unit -- --coverage",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext js,jsx --ignore-path .gitignore --fix",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "codeceptjs": "^1.1.7",
    "codeceptjs-puppeteer": "^1.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "puppeteer": "^1.2.0",
    "react-test-renderer": "^16.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:unit",
      "pre-push": "npm run test:unit"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
