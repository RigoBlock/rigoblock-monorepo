{
  "name": "rigoblock-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint packages/rigoblock-dapp --ext js,jsx --ignore-path .gitignore --fix"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "lerna": "^2.9.1",
    "lint-staged": "^7.0.3",
    "prettier": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  }
}
