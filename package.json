{
  "name": "rigoblock-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "npm run build:deployer && npm run build:protocol && npm run build:api && npm run build:dapp",
    "build:protocol": "lerna run --scope @rigoblock/protocol build --stream",
    "build:api": "lerna run --scope @rigoblock/api build --stream",
    "build:dapp": "lerna run --scope @rigoblock/dapp build --stream",
    "build:deployer": "lerna run --scope @rigoblock/deployer build --stream",
    "lint": "lerna run lint",
    "test:unit": "lerna run test:unit --stream"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.3.0",
    "husky": "^0.15.0-rc.13",
    "lerna": "^2.9.1",
    "lint-staged": "^7.0.3",
    "prettier": "^1.11.1",
    "stylelint": "^9.2.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.0.0"
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss",
    "rules": {
      "max-empty-lines": 1,
      "max-nesting-depth": 2,
      "indentation": 2,
      "declaration-block-single-line-max-declarations": 0,
      "block-closing-brace-empty-line-before": "never"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:unit"
    }
  },
  "lint-staged": {
    "*.{ts,js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{scss,css}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/*jest*",
      "**/jsdom"
    ]
  }
}
